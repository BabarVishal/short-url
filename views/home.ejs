<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Short-URL</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #1a1a1a;
            color: #f0f0f0;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        h1 {
            margin: 20px 0;
            font-size: 2.5em;
            margin-top: 100px;
            color: #61dafb;
        }

        nav {
            width: 100%;
            background-color: transparent; /* Make navbar transparent */
            padding: 10px 0;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: none; /* Remove shadow if desired */
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1000;
           
        }

        nav h1 {
            margin: 0;
            padding-left: 20px;
            font-size: 1.5em;
            color: #61dafb;
        }

        nav button {
            margin-right: 20px;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            background-color: #61dafb;
            color: #1a1a1a;
            font-size: 1em;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.3s;
        }

        nav button:hover {
            background-color: #21a1f1;
            transform: scale(1.05);
        }

        .container {
            width: 90%;
            max-width: 800px;
            padding: 20px;
            background-color: #2c2c2c;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.3);
            margin-top: 0px; /* Adjust margin to avoid overlap with navbar */
        }

        .form-group {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-bottom: 20px;
        }

        .form-group label {
            margin-bottom: 10px;
            font-size: 1.2em;
        }

        .form-group input {
            width: 100%;
            max-width: 400px;
            padding: 10px;
            margin: 5px 0;
            border: 1px solid #555;
            border-radius: 5px;
            background-color: #444;
            color: #fff;
        }

        .form-group button {
            width: 100%;
            max-width: 400px;
            padding: 10px;
            margin: 5px 0;
            border: none;
            border-radius: 5px;
            background-color: #61dafb;
            color: #1a1a1a;
            font-size: 1em;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.3s;
        }

        .form-group button:hover {
            background-color: #21a1f1;
            transform: scale(1.05);
        }

        .table-container {
            width: 100%;
            overflow-x: auto;
            margin-top: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        table, th, td {
            border: 1px solid #444;
        }

        th, td {
            padding: 15px;
            text-align: center;
        }

        th {
            background-color: #333;
        }

        tr:nth-child(even) {
            background-color: #2a2a2a;
        }

        @media (max-width: 600px) {
            .form-group {
                width: 100%;
            }

            .form-group input, .form-group button {
                width: 100%;
            }

            th, td {
                padding: 10px;
            }
        }
    </style>
</head>
<body>
    <nav>
        <h1>LinkSnap</h1>
        <div>
            <a href="http://localhost:8001/login"><button>Login</button></a>
            <a href="http://localhost:8001/signup"><button >Signup</button></a>
        </div>
    </nav>
    <h1>URL Shortener</h1>
    <div class="container">
        <% if (locals.id) { %>
            <p>Url Generated: <a href="http://localhost:8001/url/<%= id %>" style="color: #61dafb;">http://localhost:8001/url/<%= id %></a></p>
        <% } %>
        <div class="form-group">
            <form method="post" action="/url">
                <label for="url">Enter Your Original URL:</label>
                <input type="text" id="url" name="url" placeholder="https://example.com" required />
                <button type="submit">Generate</button>
            </form>
        </div>
        <% if (locals.urls) { %>
            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>S. No</th>
                            <th>Short ID</th>
                            <th>Redirect URL</th>
                            <th>Clicks</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% urls.forEach((url, index) => { %>
                            <tr>
                                <td><%= index + 1 %></td>
                                <td><%= url.shortId %></td>
                                <td><%= url.redirectURL %></td>
                                <td><%= url.visitHistory.length %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% } %>
    </div>
</body>
</html>
